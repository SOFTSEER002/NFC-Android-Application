<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:weightSum="1">

    <RelativeLayout
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:padding="10dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:elevation="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:padding="5dp"
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="NG2737-9393"
            android:textColor="@color/lite_pink" />

        <TextView
            android:id="@+id/candi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Fakoya Emmanuel Ayomede"
            android:textColor="@color/white" />
        <View
            android:layout_centerInParent="true"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:paddingTop="10dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:id="@+id/iterview_layout"
                    android:gravity="center"
                    android:background="@drawable/ic_small_button_frame"
                    android:layout_width="80dp"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/iterview"
                        android:textSize="9sp"
                        android:textColor="@color/white"
                        android:text="Intervewed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/ic_small_button_frame"
                    android:layout_width="80dp"
                    android:layout_height="40dp">
                    <TextView
                        android:textSize="9sp"
                        android:textColor="@color/white"
                        android:text="Encode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/view_details"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/ic_filled_small_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp">
                    <TextView
                        android:textSize="9sp"
                        android:textColor="@color/white"
                        android:text="Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
