<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Activities.LoginActivity">

    <View
        android:id="@+id/px_nigerian"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/ordinance_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/px_nigerian"
        android:text="@string/ordinance_s"
        android:textAppearance="@style/ordinance_s"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/eqis_reader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ordinance_s"
        android:text="@string/eqis_reader"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/eqis_reader"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="243dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:textColor="#121212"
        android:text="Login"
        android:background="@drawable/rectangle_2"
        android:elevation="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request for Credential"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:id="@+id/txt_req_crednls"/>





</RelativeLayout>
